{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": false,
    "target": "es6",
    "module": "commonjs",
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
